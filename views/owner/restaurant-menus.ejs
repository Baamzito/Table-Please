<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-5 pt-5" style="min-height: calc(100vh - 150px)">
  <% if (locals.success) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% } %>
  
  <% if (locals.error) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% } %>

  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/owner/my-restaurants">My Restaurants</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= restaurant.name %> Menus</li>
    </ol>
  </nav>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><%= restaurant.name %> - Menus</h2>
    <a href="/owner/restaurant/<%= restaurant._id %>/menu/create" class="btn btn-primary">
      <i class="fas fa-plus me-2"></i>Add New Menu
    </a>
  </div>

  <% if (menus.length > 0) { %>
    <div class="row">
      <% menus.forEach(menu => { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title"><%= menu.name %></h5>
              <% if(menu.description) { %>
                <p class="card-text"><%= menu.description.length > 100 ? menu.description.substring(0, 100) + '...' : menu.description %></p>
              <% } %>
              <p class="card-text text-muted small">
                <% if(menu.active) { %>
                  <span class="badge bg-success me-2"><i class="fas fa-check me-1"></i>Available</span>
                <% } else { %>
                  <span class="badge bg-secondary me-2"><i class="fas fa-times me-1"></i>Unavailable</span>
                <% } %>
                <% if(menu.type) { %>
                  <span class="badge bg-info text-dark"><%= menu.type %></span>
                <% } %>
              </p>
            </div>
            <div class="card-footer bg-white">
              <div class="d-flex justify-content-between">
                <a href="/owner/menu/<%= menu._id %>/items" class="btn btn-outline-primary btn-sm">
                  <i class="fas fa-list me-1"></i>Manage Items
                </a>
                <div>
                  <a href="/owner/menu/<%= menu._id %>/edit" class="btn btn-outline-secondary btn-sm me-1">
                    <i class="fas fa-edit"></i>
                  </a>
                  <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal<%= menu._id %>">
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Delete Confirmation Modal -->
        <div class="modal fade" id="deleteModal<%= menu._id %>" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                Are you sure you want to delete <strong><%= menu.name %></strong>? This action will also delete all associated menu items and cannot be undone.
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form action="/owner/menu/<%= menu._id %>/delete" method="POST">
                  <button type="submit" class="btn btn-danger">Delete Menu</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="card shadow-sm">
      <div class="card-body text-center py-5">
        <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
        <h4>No Menus Yet</h4>
        <p class="text-muted">You haven't added any menus for this restaurant yet. Get started by creating your first menu!</p>
        <a href="/owner/restaurant/<%= restaurant._id %>/menu/create" class="btn btn-primary">
          <i class="fas fa-plus me-2"></i>Add New Menu
        </a>
      </div>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>