<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-5 pt-5" style="min-height: calc(100vh - 150px)">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/owner/my-restaurants">My Restaurants</a></li>
          <li class="breadcrumb-item"><a href="/owner/restaurant/<%= restaurant._id %>/menus"><%= restaurant.name %> Menus</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= menu.name %> Items</li>
        </ol>
      </nav>

      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white">
          <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Items in <%= menu.name %></h4>
            <a href="/owner/menu/<%= menu._id %>/item/create" class="btn btn-primary">
              <i class="fas fa-plus me-1"></i>Add New Item
            </a>
          </div>
        </div>
        <div class="card-body">
          <% if (menuItems.length === 0) { %>
            <div class="text-center py-5">
              <div class="mb-3">
                <i class="fas fa-utensils fa-3x text-muted"></i>
              </div>
              <h5 class="text-muted">No items in this menu yet</h5>
              <p class="text-muted">Get started by adding your first menu item</p>
              <a href="/owner/menu/<%= menu._id %>/item/create" class="btn btn-outline-primary">
                <i class="fas fa-plus me-1"></i>Add First Item
              </a>
            </div>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th style="width: 80px">Image</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th style="width: 120px">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% menuItems.forEach(item => { %>
                    <tr>
                      <td>
                        <% if (item.image) { %>
                          <img src="<%= item.image %>" alt="<%= item.name %>" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                        <% } else { %>
                          <div class="bg-light d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="fas fa-image text-muted"></i>
                          </div>
                        <% } %>
                      </td>
                      <td><%= item.name %></td>
                      <td><%= item.description.length > 50 ? item.description.substring(0, 50) + '...' : item.description %></td>
                      <td><%= item.category %></td>
                      <td>$<%= item.price.toFixed(2) %></td>
                      <td>
                        <span class="badge <%= item.available ? 'bg-success' : 'bg-danger' %>">
                          <%= item.available ? 'Available' : 'Unavailable' %>
                        </span>
                      </td>
                      <td>
                        <div class="btn-group btn-group-sm">
                          <a href="/owner/menu-item/<%= item._id %>/edit" class="btn btn-outline-primary">
                            <i class="fas fa-edit"></i>
                          </a>
                          <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= item._id %>">
                            <i class="fas fa-trash"></i>
                          </button>
                        </div>
                      </td>
                    </tr>

                    <div class="modal fade" id="deleteModal<%= item._id %>" tabindex="-1" aria-labelledby="deleteModalLabel<%= item._id %>" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel<%= item._id %>">Confirm Delete</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            Are you sure you want to delete "<%= item.name %>"? This action cannot be undone.
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <form action="/owner/menu-item/<%= item._id %>/delete" method="POST" class="d-inline">
                              <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <h5 class="mb-0">Menu Details</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <p><strong>Menu Name:</strong> <%= menu.name %></p>
              <p><strong>Status:</strong> 
                <span class="badge <%= menu.active ? 'bg-success' : 'bg-danger' %>">
                  <%= menu.active ? 'Active' : 'Inactive' %>
                </span>
              </p>
            </div>
            <div class="col-md-6">
              <p><strong>Restaurant:</strong> <%= restaurant.name %></p>
              <p><strong>Description:</strong> <%= menu.description || 'No description provided' %></p>
            </div>
          </div>
          <div class="mt-3">
            <a href="/owner/menu/<%= menu._id %>/edit" class="btn btn-outline-secondary">
              <i class="fas fa-edit me-1"></i>Edit Menu
            </a>
            <a href="/owner/restaurant/<%= restaurant._id %>/menus" class="btn btn-outline-primary ms-2">
              <i class="fas fa-arrow-left me-1"></i>Back to Menus
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>