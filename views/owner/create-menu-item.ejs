<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-5 pt-5" style="min-height: calc(100vh - 150px)">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/owner/my-restaurants">My Restaurants</a></li>
          <li class="breadcrumb-item"><a href="/owner/restaurant/<%= restaurant._id %>/menus"><%= restaurant.name %> Menus</a></li>
          <li class="breadcrumb-item"><a href="/owner/menu/<%= menu._id %>/items"><%= menu.name %> Items</a></li>
          <li class="breadcrumb-item active" aria-current="page">Add New Item</li>
        </ol>
      </nav>

      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Add New Item to <%= menu.name %></h4>
            <a href="/owner/menu/<%= menu._id %>/items" class="btn btn-sm btn-outline-secondary">
              <i class="fas fa-arrow-left me-1"></i>Back to Items
            </a>
          </div>
        </div>
        <div class="card-body">
          <% if (locals.error) { %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
          <% } %>
          
          <form action="/owner/menu/<%= menu._id %>/item/create" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="name" class="form-label">Item Name *</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= locals.body ? body.name : '' %>" required>
            </div>
            
            <div class="mb-3">
              <label for="description" class="form-label">Description *</label>
              <textarea class="form-control" id="description" name="description" rows="3" required><%= locals.body ? body.description : '' %></textarea>
            </div>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="price" class="form-label">Price *</label>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" value="<%= locals.body ? body.price : '' %>" required>
                </div>
              </div>
              
              <div class="col-md-6 mb-3">
                <label for="category" class="form-label">Category *</label>
                <select class="form-select" id="category" name="category" required>
                  <option value="" disabled <%= !locals.body || !body.category ? 'selected' : '' %>>Select a category</option>
                  <option value="Appetizer" <%= locals.body && body.category === 'Appetizer' ? 'selected' : '' %>>Appetizer</option>
                  <option value="Main Course" <%= locals.body && body.category === 'Main Course' ? 'selected' : '' %>>Main Course</option>
                  <option value="Side" <%= locals.body && body.category === 'Side' ? 'selected' : '' %>>Side</option>
                  <option value="Dessert" <%= locals.body && body.category === 'Dessert' ? 'selected' : '' %>>Dessert</option>
                  <option value="Beverage" <%= locals.body && body.category === 'Beverage' ? 'selected' : '' %>>Beverage</option>
                  <option value="Vegetarian" <%= locals.body && body.category === 'Vegetarian' ? 'selected' : '' %>>Vegetarian</option>
                  <option value="Vegan" <%= locals.body && body.category === 'Vegan' ? 'selected' : '' %>>Vegan</option>
                  <option value="Kids" <%= locals.body && body.category === 'Kids' ? 'selected' : '' %>>Kids</option>
                  <option value="Gluten-Free" <%= locals.body && body.category === 'Gluten-Free' ? 'selected' : '' %>>Gluten-Free</option>
                  <option value="Healthy" <%= locals.body && body.category === 'Healthy' ? 'selected' : '' %>>Healthy</option>
                </select>
              </div>
            </div>
            
            <div class="mb-3">
              <label class="form-label d-block">Availability</label>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="available" id="available" value="true" <%= !locals.body || body.available === 'true' || body.available === true ? 'checked' : '' %>>
                <label class="form-check-label" for="available">Available</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="available" id="unavailable" value="false" <%= locals.body && (body.available === 'false' || body.available === false) ? 'checked' : '' %>>
                <label class="form-check-label" for="unavailable">Unavailable</label>
              </div>
            </div>
            
            <div class="card mb-4">
              <div class="card-header bg-light">
                <h5 class="mb-0">Nutritional Information</h5>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="itemInfo.calories" class="form-label">Calories (kcal) *</label>
                    <input type="number" class="form-control" id="itemInfo.calories" name="itemInfo_calories" min="0" value="<%= locals.body && body.itemInfo ? body.itemInfo.calories : '' %>" required>
                  </div>
                  
                  <div class="col-md-6 mb-3">
                    <label for="itemInfo.proteins" class="form-label">Proteins (g) *</label>
                    <input type="number" class="form-control" id="itemInfo.proteins" name="itemInfo_proteins" min="0" step="0.1" value="<%= locals.body && body.itemInfo ? body.itemInfo.proteins : '' %>" required>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="itemInfo.fats" class="form-label">Fats (g) *</label>
                    <input type="number" class="form-control" id="itemInfo.fats" name="itemInfo_fats" min="0" step="0.1" value="<%= locals.body && body.itemInfo ? body.itemInfo.fats : '' %>" required>
                  </div>
                  
                  <div class="col-md-6 mb-3">
                    <label for="itemInfo.carbohydrates" class="form-label">Carbohydrates (g) *</label>
                    <input type="number" class="form-control" id="itemInfo.carbohydrates" name="itemInfo_carbohydrates" min="0" step="0.1" value="<%= locals.body && body.itemInfo ? body.itemInfo.carbohydrates : '' %>" required>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="itemInfo.fiber" class="form-label">Fiber (g)</label>
                    <input type="number" class="form-control" id="itemInfo.fiber" name="itemInfo_fiber" min="0" step="0.1" value="<%= locals.body && body.itemInfo ? body.itemInfo.fiber : '' %>" required>
                  </div>
                  
                  <div class="col-md-6 mb-3">
                    <label for="itemInfo.sodium" class="form-label">Sodium (mg)</label>
                    <input type="number" class="form-control" id="itemInfo.sodium" name="itemInfo_sodium" min="0" step="1" value="<%= locals.body && body.itemInfo ? body.itemInfo.sodium : '' %>" required>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="mb-4">
              <label for="image" class="form-label">Item Image</label>
              <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
              <div class="form-text">Upload an image of your menu item</div>
            </div>
            
            <input type="hidden" name="menuId" value="<%= menu._id %>">
            
            <div class="d-flex justify-content-between mt-4">
              <a href="/owner/menu/<%= menu._id %>/items" class="btn btn-outline-secondary">Cancel</a>
              <button type="submit" class="btn btn-primary">Add Item</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>