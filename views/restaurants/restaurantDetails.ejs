<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<!-- Restaurant Header -->
<section class="hero-section position-relative" style="background-image: url('/images/restaurants/<%= restaurant._id %>/header.jpg'); background-size: cover; height: 400px; margin-top: 0; padding-top: 0;">
  <div class="position-absolute w-100 h-100" style="background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.7));"></div>
  <div class="container position-relative h-100 d-flex align-items-end pb-4">
    <div class="text-white mb-3">
      <div class="mb-3">
        <% if(restaurant.cuisine) { %>
          <span class="badge bg-primary rounded-pill px-3 py-2 me-2 mb-2"><%= restaurant.cuisine %></span>
        <% } %>
        <% if(restaurant.priceRange) { %>
          <span class="badge bg-dark rounded-pill px-3 py-2">
            <% for(let i = 0; i < restaurant.priceRange; i++) { %>$<% } %>
          </span>
        <% } %>
      </div>
      <h1 class="display-4 fw-bold mb-2"><%= restaurant.name %></h1>
      <div class="d-flex align-items-center flex-wrap">
        <% if(restaurant.rating !== undefined && restaurant.rating !== null) { %>
          <div class="me-4 mb-2">
            <span class="fs-5 me-2">
              <% for(let i = 0; i < 5; i++) { %>
                <i class="<%= i < Math.floor(restaurant.rating) ? 'fas' : 'far' %> fa-star text-warning"></i>
              <% } %>
            </span>
            <span class="fs-5"><%= typeof restaurant.rating === 'number' ? restaurant.rating.toFixed(1) : restaurant.rating %></span>
          </div>
        <% } %>
        <p class="mb-2 fs-5">
          <i class="fas fa-map-marker-alt me-2"></i><%= restaurant.address.street %>, <%= restaurant.address.city %>, <%= restaurant.address.postcode %>
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Quick Actions Bar -->
<div class="bg-white shadow-sm sticky-top" style="margin-top: 0;">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center py-3">
      <ul class="nav nav-pills">
        <li class="nav-item">
          <a class="nav-link active px-4" href="#menu">Menu</a>
        </li>
      </ul>
    </div>
  </div>
</div>

<!-- Main Content -->
<section class="py-4 bg-light">
  <div class="container">
    <div class="row g-4">
      <!-- Left Side Column - Content -->
      <div class="col-lg-8">
        <!-- Menu Section -->
        <div id="menu" class="card shadow-sm border-0 overflow-hidden mb-4">
          <div class="card-body p-4">
            <h2 class="card-title h3 mb-4 pb-2 border-bottom">Menu</h2>

            <% if(menus && menus.length > 0) { %>
              <!-- Menu Navigation -->
              <% if(menus.length > 1) { %>
                <ul class="nav nav-tabs nav-fill mb-4">
                  <% menus.forEach((menu, index) => { %>
                    <li class="nav-item">
                      <a class="nav-link <%= index === 0 ? 'active' : '' %>" href="#menu-<%= menu._id %>">
                        <%= menu.name %>
                      </a>
                    </li>
                  <% }) %>
                </ul>
              <% } %>

              <% menus.forEach((menu, index) => { %>
                <div class="menu-section mb-5" id="menu-<%= menu._id %>">
                  <h3 class="h4 mb-4"><%= menu.name %></h3>
                  <% if(menu.description) { %>
                    <p class="mb-4"><%= menu.description %></p>
                  <% } %> 
                  
                  <% 
                  const menuItemsForMenu = menu.items || [];
                  
                  const categories = {};
                  menuItemsForMenu.forEach(item => {
                    if(!categories[item.category]) {
                      categories[item.category] = [];
                    }
                    if(item.available !== false) {
                      categories[item.category].push(item);
                    }
                  });
                  
                  if(Object.keys(categories).length > 0) { 
                  %>
                    <% Object.keys(categories).forEach(category => { %>
                      <% if(categories[category].length > 0) { %>
                        <div class="menu-category mb-4" id="menu-<%= menu._id %>-<%= category.toLowerCase().replace(/\s+/g, '-') %>">
                          <h4 class="h5 mb-3 pb-2 border-bottom"><%= category %></h4>
                          <div class="row g-4">
                            <% categories[category].forEach(item => { %>
                              <div class="col-lg-6 mb-3">
                                <div class="card h-100 border-0 shadow-sm">
                                  <div class="row g-0">
                                    <div class="col-4">
                                      <% if(item.image) { %>
                                        <div class="h-100" style="background-image: url('<%= item.image %>'); background-size: cover; background-position: center;"></div>
                                      <% } else { %>
                                        <div class="bg-light h-100 d-flex align-items-center justify-content-center">
                                          <i class="fas fa-utensils fa-2x text-secondary opacity-50"></i>
                                        </div>
                                      <% } %>
                                    </div>
                                    <div class="col-8">
                                      <div class="card-body p-3">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                          <h5 class="card-title mb-0"><%= item.name %></h5>
                                          <span class="badge bg-primary rounded-pill px-3 py-2">$<%= typeof item.price === 'number' ? item.price.toFixed(2) : item.price %></span>
                                        </div>
                                        <p class="card-text text-muted small mb-2" style="height: 40px; max-height: 40px; overflow: hidden; position: relative;">
                                          <%= item.description %>
                                        </p>
                                        <div class="mt-2 d-flex justify-content-end align-items-center">
                                          <% if(item.itemInfo) { %>
                                            <button type="button" class="btn btn-sm btn-outline-primary details-btn" 
                                                    onclick="showModal('<%= item._id %>')">
                                              View Details
                                            </button>
                                          <% } %>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            <% }) %>
                          </div>
                        </div>
                      <% } %>
                    <% }) %> 
                  <% } else { %>
                    <p class="text-muted">No items available for this menu.</p>
                  <% } %>
                </div>
              <% }) %> 
            <% } else { %>
              <p class="text-muted">No menu information available for this restaurant.</p>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Right Side Column - Sidebar -->
      <div class="col-lg-4">
        <div class="sticky-top" style="top: 80px;">
          <!-- Contact Information -->
          <div class="card shadow border-0 overflow-hidden mb-4">
            <div class="card-body p-4">
              <h4 class="card-title mb-3"><i class="fas fa-id-card me-2 text-primary"></i>Contact Information</h4>
              <ul class="list-group list-group-flush">
                <li class="list-group-item px-0 py-3 d-flex border-top-0">
                  <div class="me-3">
                    <span class="btn btn-sm btn-primary rounded-circle">
                      <i class="fas fa-phone"></i>
                    </span>
                  </div>
                  <div>
                    <p class="text-muted mb-1 small">Phone</p>
                    <a href="tel:<%= restaurant.contact.phone %>" class="text-decoration-none fw-medium">
                      <%= restaurant.contact.phone %>
                    </a>
                  </div>
                </li>
                <% if(restaurant.contact && restaurant.contact.email) { %>
                <li class="list-group-item px-0 py-3 d-flex border-bottom-0">
                  <div class="me-3">
                    <span class="btn btn-sm btn-primary rounded-circle">
                      <i class="fas fa-envelope"></i>
                    </span>
                  </div>
                  <div>
                    <p class="text-muted mb-1 small">Email</p>
                    <a href="mailto:<%= restaurant.contact.email %>" class="text-decoration-none fw-medium">
                      <%= restaurant.contact.email %>
                    </a>
                  </div>
                </li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Modals -->
<% if(menus && menus.length > 0) { %>
  <% menus.forEach(menu => { %>
    <% const menuItemsForMenu = menu.items || []; %>
    <% menuItemsForMenu.forEach(item => { %>
      <% if(item.available !== false && item.itemInfo) { %>
        <div class="modal fade" id="itemModal<%= item._id %>" tabindex="-1" aria-labelledby="itemModalLabel<%= item._id %>" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="itemModalLabel<%= item._id %>"><%= item.name %> - Nutritional Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <% if(item.description) { %>
                  <div class="mb-4">
                    <h6 class="mb-2">Description</h6>
                    <p><%= item.description %></p>
                  </div>
                <% } %>
                
                <div class="card border-0 mb-4">
                  <div class="card-body p-0">
                    <h6 class="mb-2">Nutritional Information</h6>
                    <table class="table table-striped mb-0">
                      <thead class="bg-light">
                        <tr>
                          <th scope="col">Nutrient</th>
                          <th scope="col" class="text-end">Amount</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>Calories</td>
                          <td class="text-end"><%= item.itemInfo.calories %> kcal</td>
                        </tr>
                        <tr>
                          <td>Proteins</td>
                          <td class="text-end"><%= item.itemInfo.proteins %> g</td>
                        </tr>
                        <tr>
                          <td>Fats</td>
                          <td class="text-end"><%= item.itemInfo.fats %> g</td>
                        </tr>
                        <tr>
                          <td>Carbohydrates</td>
                          <td class="text-end"><%= item.itemInfo.carbohydrates %> g</td>
                        </tr>
                        <% if(item.itemInfo.fiber !== undefined) { %>
                        <tr>
                          <td>Fiber</td>
                          <td class="text-end"><%= item.itemInfo.fiber %> g</td>
                        </tr>
                        <% } %>
                        <% if(item.itemInfo.sodium !== undefined) { %>
                        <tr>
                          <td>Sodium</td>
                          <td class="text-end"><%= item.itemInfo.sodium %> mg</td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    <% }) %>
  <% }) %>
<% } %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<%- include('../partials/footer') %>

<script>
  window.showModal = function(itemId) {
    const modalId = 'itemModal' + itemId;
    const modalElement = document.getElementById(modalId);
    
    if (!modalElement) {
        console.error('Modal not found:', modalId);
        return;
    }
    
    if (typeof bootstrap !== 'undefined' && typeof bootstrap.Modal !== 'undefined') {
        const modalInstance = new bootstrap.Modal(modalElement);
        modalInstance.show();
    } else if (typeof $ !== 'undefined' && $.fn.modal) {
        $(modalElement).modal('show');
    } else {
        modalElement.classList.add('show');
        modalElement.style.display = 'block';
        document.body.classList.add('modal-open');
        
        let backdrop = document.querySelector('.modal-backdrop');
        if (!backdrop) {
            backdrop = document.createElement('div');
            backdrop.classList.add('modal-backdrop', 'fade', 'show');
            document.body.appendChild(backdrop);
        }
        
        backdrop.addEventListener('click', function() {
            closeModal(itemId);
        });
    }
};

window.closeModal = function(itemId) {
    const modalId = 'itemModal' + itemId;
    const modalElement = document.getElementById(modalId);
    
    if (!modalElement) return;
    
    modalElement.classList.remove('show');
    modalElement.style.display = 'none';
    document.body.classList.remove('modal-open');

    const backdrop = document.querySelector('.modal-backdrop');
    if (backdrop) {
        backdrop.remove();
    }
};

document.querySelectorAll('.btn-close, .modal-footer .btn').forEach(button => {
    button.addEventListener('click', function() {
        const modalId = this.closest('.modal').id;
        const itemId = modalId.replace('itemModal', '');
        closeModal(itemId);
    });
});
</script>