<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  </head>
  <body>
    <%- include('partials/navbar') %>
    <!-- Hero Section with Search -->
    <section class="hero-section position-relative w-100 vw-100">
      <div class="hero-bg-overlay position-absolute w-100 h-100"></div>
      <div class="container-fluid position-relative py-5">
        <div class="row min-vh-75 align-items-center pt-5">
          <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-4 text-white fw-bold mb-3">Discover the Perfect Restaurant</h1>
            <p class="lead text-white mb-4">Find the best places to eat based on cuisine, location, and reviews</p>
            
            <div class="search-container bg-white p-3 rounded shadow mx-3 mx-md-auto" style="max-width: 800px;">
              <form action="/restaurants/search" method="GET">
                <div class="row g-2">
                  <div class="col-md-5">
                    <div class="input-group">
                      <span class="input-group-text bg-transparent border-0">
                        <i class="fas fa-utensils text-primary"></i>
                      </span>
                      <input type="text" class="form-control border-0" name="keyword" placeholder="Restaurant name or cuisine type">
                    </div>
                  </div>
                  <div class="col-md-5">
                    <div class="input-group">
                      <span class="input-group-text bg-transparent border-0">
                        <i class="fas fa-map-marker-alt text-primary"></i>
                      </span>
                      <input type="text" class="form-control border-0" name="location" placeholder="Location">
                    </div>
                  </div>
                  <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                      <i class="fas fa-search me-2"></i>Search
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Restaurants -->
    <section class="py-5 bg-light w-100 vw-100">
      <div class="container-fluid px-lg-5">
        <div class="row mb-4">
          <div class="col-12">
            <h2 class="text-center mb-4">Featured Restaurants</h2>
            <p class="text-center text-muted">Discover our users' top picks and newest additions</p>
          </div>
        </div>
        
        <div class="row px-3 px-lg-5">
          <% if (locals.featuredRestaurants && featuredRestaurants.length > 0) { %>
            <% featuredRestaurants.forEach(restaurant => { %>
              <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm hover-card">
                  <img src="<%= restaurant.imageUrl %>" class="card-img-top restaurant-img" alt="<%= restaurant.name %>">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                      <h5 class="card-title mb-0"><%= restaurant.name %></h5>
                      <span class="badge bg-primary rounded-pill">
                        <i class="fas fa-star me-1"></i><%= restaurant.rating.toFixed(1) %>
                      </span>
                    </div>
                    <p class="text-muted small mb-1">
                      <i class="fas fa-utensils me-2"></i><%= restaurant.cuisine %>
                    </p>
                    <p class="text-muted small mb-2">
                      <i class="fas fa-map-marker-alt me-2"></i><%= restaurant.location %>
                    </p>
                    <p class="card-text text-truncate"><%= restaurant.description %></p>
                  </div>
                  <div class="card-footer bg-white border-top-0">
                    <a href="/restaurants/<%= restaurant.id %>" class="btn btn-outline-primary btn-sm">View Details</a>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <div class="col-12 text-center">
              <p>No featured restaurants available at the moment.</p>
              <a href="/restaurants" class="btn btn-primary">Browse All Restaurants</a>
            </div>
          <% } %>
        </div>
        
        <div class="text-center mt-4">
          <a href="/restaurants" class="btn btn-outline-primary">View All Restaurants</a>
        </div>
      </div>
    </section>

    <!-- Popular Cuisines -->
    <section class="py-5 w-100 vw-100">
      <div class="container-fluid px-lg-5">
        <div class="row mb-4">
          <div class="col-12">
            <h2 class="text-center mb-4">Popular Cuisines</h2>
            <p class="text-center text-muted">Explore restaurants by your favorite cuisine types</p>
          </div>
        </div>
        
        <div class="row justify-content-center px-3 px-lg-5">
          <% const cuisines = locals.popularCuisines || [
            {name: 'Italian', icon: 'fa-pizza-slice', count: 42},
            {name: 'Japanese', icon: 'fa-fish', count: 38},
            {name: 'American', icon: 'fa-burger', count: 35},
            {name: 'Mexican', icon: 'fa-pepper-hot', count: 29},
            {name: 'Indian', icon: 'fa-bowl-food', count: 24},
            {name: 'Chinese', icon: 'fa-bowl-rice', count: 22}
          ]; %>
          
          <% cuisines.forEach(cuisine => { %>
            <div class="col-6 col-md-4 col-lg-2 mb-4">
              <a href="/restaurants/cuisine/<%= cuisine.name.toLowerCase() %>" class="text-decoration-none">
                <div class="card text-center cuisine-card h-100 shadow-sm">
                  <div class="card-body py-4">
                    <i class="fas <%= cuisine.icon %> cuisine-icon mb-3"></i>
                    <h5 class="card-title mb-1"><%= cuisine.name %></h5>
                    <p class="text-muted small"><%= cuisine.count %> restaurants</p>
                  </div>
                </div>
              </a>
            </div>
          <% }); %>
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="py-5 bg-light w-100 vw-100">
      <div class="container-fluid px-lg-5">
        <div class="row mb-4">
          <div class="col-12">
            <h2 class="text-center mb-4">How It Works</h2>
            <p class="text-center text-muted">Finding your perfect dining experience is simple</p>
          </div>
        </div>
        
        <div class="row px-3 px-lg-5">
          <div class="col-md-4 mb-4 mb-md-0">
            <div class="card h-100 shadow-sm text-center border-0 bg-transparent">
              <div class="card-body">
                <div class="icon-circle bg-primary text-white mx-auto mb-4">
                  <i class="fas fa-search"></i>
                </div>
                <h4>Search</h4>
                <p class="text-muted">Enter your location and preferred cuisine to find restaurants near you.</p>
              </div>
            </div>
          </div>
          
          <div class="col-md-4 mb-4 mb-md-0">
            <div class="card h-100 shadow-sm text-center border-0 bg-transparent">
              <div class="card-body">
                <div class="icon-circle bg-primary text-white mx-auto mb-4">
                  <i class="fas fa-star"></i>
                </div>
                <h4>Compare</h4>
                <p class="text-muted">Check ratings, reviews, menus, and photos to make the best choice.</p>
              </div>
            </div>
          </div>
          
          <div class="col-md-4">
            <div class="card h-100 shadow-sm text-center border-0 bg-transparent">
              <div class="card-body">
                <div class="icon-circle bg-primary text-white mx-auto mb-4">
                  <i class="fas fa-utensils"></i>
                </div>
                <h4>Enjoy</h4>
                <p class="text-muted">Dine at your chosen restaurant and share your experience with others.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Join Community -->
    <section class="py-5 bg-primary text-white w-100 vw-100">
      <div class="container-fluid px-lg-5">
        <div class="row align-items-center px-3 px-lg-5">
          <div class="col-lg-8 mb-4 mb-lg-0">
            <h2>Join Our Community of Food Lovers</h2>
            <p class="lead mb-0">Create an account to save favorites, write reviews, and get personalized recommendations.</p>
          </div>
          <div class="col-lg-4 text-lg-end">
            <a href="/auth/signup" class="btn btn-light btn-lg">Sign Up Now</a>
          </div>
        </div>
      </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>