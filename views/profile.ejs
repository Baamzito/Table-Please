<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container mt-5 pt-5">
        <% if (locals.success) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>
        
        <div class="row">
          <!-- Sidebar / Menu -->
          <div class="col-lg-3 mb-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <div class="text-center mb-3">
                  <img src="<%= user.profileImage || '/images/default-avatar.png' %>" alt="Profile Picture" 
                       class="img-fluid rounded-circle profile-image mb-3" style="width: 120px; height: 120px; object-fit: cover;">
                  <h5 class="mb-0"><%= user.name %></h5>
                  <p class="text-muted small">@<%= user.username %></p>
                  <p class="text-muted small"><i class="fas fa-map-marker-alt me-1"></i><%= user.location || 'Location not set' %></p>
                  <div class="d-grid">
                    <a href="/profile/edit" class="btn btn-outline-primary">
                      <i class="fas fa-user-edit me-2"></i>Edit Profile
                    </a>
                  </div>
                </div>
                
                <hr>
                
                <div class="profile-menu">
                  <ul class="nav flex-column">
                    <li class="nav-item">
                      <a class="nav-link active" href="/profile">
                        <i class="fas fa-user me-2"></i>My Profile
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/profile/favorites">
                        <i class="fas fa-heart me-2"></i>Favorite Restaurants
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/profile/reviews">
                        <i class="fas fa-star me-2"></i>My Reviews
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/profile/bookmarks">
                        <i class="fas fa-bookmark me-2"></i>Bookmarked
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/profile/change-password">
                        <i class="fas fa-lock me-2"></i>Change Password
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link text-danger" href="/auth/logout">
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                      </a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Main Content -->
          <div class="col-lg-9">
            <!-- Profile Overview -->
            <div class="card shadow-sm mb-4">
              <div class="card-header bg-white">
                <h5 class="card-title mb-0">Profile Information</h5>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <p class="text-muted small mb-1">Full Name</p>
                    <p class="mb-0"><%= user.name %></p>
                  </div>
                  <div class="col-md-6 mb-3">
                    <p class="text-muted small mb-1">Username</p>
                    <p class="mb-0">@<%= user.username %></p>
                  </div>
                  <div class="col-md-6 mb-3">
                    <p class="text-muted small mb-1">Email Address</p>
                    <p class="mb-0"><%= user.email %></p>
                  </div>
                  <div class="col-md-6 mb-3">
                    <p class="text-muted small mb-1">Location</p>
                    <p class="mb-0"><%= user.location || 'Not specified' %></p>
                  </div>
                  <div class="col-md-6 mb-3">
                    <p class="text-muted small mb-1">Member Since</p>
                    <p class="mb-0"><%= new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                  </div>
                  <div class="col-md-6 mb-3">
                    <p class="text-muted small mb-1">Last Updated</p>
                    <p class="mb-0"><%= new Date(user.updatedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Food Preferences -->
            <div class="card shadow-sm mb-4">
              <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Food Preferences</h5>
                <a href="/profile/edit#preferences" class="btn btn-sm btn-outline-primary">
                  <i class="fas fa-edit me-1"></i>Edit
                </a>
              </div>
              <div class="card-body">
                <% if (user.preferences && user.preferences.cuisines && user.preferences.cuisines.length > 0) { %>
                  <div class="mb-3">
                    <p class="text-muted small mb-2">Favorite Cuisines</p>
                    <div>
                      <% user.preferences.cuisines.forEach(cuisine => { %>
                        <span class="badge bg-primary me-2 mb-2"><%= cuisine %></span>
                      <% }); %>
                    </div>
                  </div>
                <% } else { %>
                  <p class="text-muted">No cuisine preferences set. <a href="/profile/edit#preferences">Add your favorite cuisines</a> to get better recommendations!</p>
                <% } %>
                
                <% if (user.preferences && user.preferences.dietaryRestrictions && user.preferences.dietaryRestrictions.length > 0) { %>
                  <div>
                    <p class="text-muted small mb-2">Dietary Restrictions</p>
                    <div>
                      <% user.preferences.dietaryRestrictions.forEach(restriction => { %>
                        <span class="badge bg-secondary me-2 mb-2"><%= restriction %></span>
                      <% }); %>
                    </div>
                  </div>
                <% } %>
              </div>
            </div>
            
            <!-- Activity Summary -->
            <div class="card shadow-sm">
              <div class="card-header bg-white">
                <h5 class="card-title mb-0">Activity Summary</h5>
              </div>
              <div class="card-body">
                <div class="row text-center">
                  <div class="col-4">
                    <div class="activity-stat">
                      <h3 class="mb-1"><%= user.reviewCount || 0 %></h3>
                      <p class="text-muted small mb-0">Reviews</p>
                    </div>
                  </div>
                  <div class="col-4">
                    <div class="activity-stat">
                      <h3 class="mb-1"><%= user.favoriteCount || 0 %></h3>
                      <p class="text-muted small mb-0">Favorites</p>
                    </div>
                  </div>
                  <div class="col-4">
                    <div class="activity-stat">
                      <h3 class="mb-1"><%= user.bookmarkCount || 0 %></h3>
                      <p class="text-muted small mb-0">Bookmarks</p>
                    </div>
                  </div>
                </div>
                
                <% if ((user.reviewCount || 0) === 0 && (user.favoriteCount || 0) === 0) { %>
                  <div class="text-center mt-4">
                    <p class="text-muted">Start exploring restaurants to build your profile activity!</p>
                    <a href="/restaurants" class="btn btn-primary">
                      <i class="fas fa-utensils me-2"></i>Discover Restaurants
                    </a>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
</body>
</html>